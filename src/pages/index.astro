---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout />

<style>
	.pokedex {
		position: relative;
		display: flex;
		justify-content: flex-end;
		align-items: center;
	}
	@media (width < 992px) {
		.pokedex {
			flex-direction: column;
			height: calc(100vh - 46px);
		}
	}
	@media (width < 490px) {
		.pokedex {
			justify-content: space-between;
		}
	}
</style>
